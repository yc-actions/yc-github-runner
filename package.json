{
  "name": "yc-github-runner",
  "version": "2.0.0",
  "description": "GitHub Action to On-demand self-hosted YC runner for GitHub Actions.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "GITHUB_REPOSITORY=owner/repo GITHUB_WORKSPACE=__tests__ jest --verbose",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "git-tag": "git tag v`cat package.json | jq -r '.version' | awk -F. '{print $1}'` -f &&  git tag v`cat package.json | jq -r '.version'` -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yc-actions/yc-github-runner.git"
  },
  "keywords": [
    "actions",
    "yandex cloud",
    "runner",
    "github action"
  ],
  "author": "Nikolay Matrosov",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@grpc/grpc-js": "1.13.4",
    "@yandex-cloud/nodejs-sdk": "^2.9.0",
    "js-yaml": "^4.1.0",
    "moment": "^2.30.1",
    "axios": "^1.9.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@stylistic/eslint-plugin-ts": "^4.4.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vercel/ncc": "^0.38.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.27.0",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.5.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  }
}
