{
  "name": "yc-github-runner",
  "version": "1.3.0",
  "description": "GitHub Action to On-demand self-hosted YC runner for GitHub Actions.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "GITHUB_REPOSITORY=owner/repo GITHUB_WORKSPACE=__tests__ jest --verbose",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yc-actions/yc-github-runner.git"
  },
  "keywords": [
    "actions",
    "yandex cloud",
    "runner",
    "github action"
  ],
  "author": "Nikolay Matrosov",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@yandex-cloud/nodejs-sdk": "^2.7.0",
    "@grpc/grpc-js": "1.10.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/ncc": "^0.38.1",
    "dotenv": "^16.4.4",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.0.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
