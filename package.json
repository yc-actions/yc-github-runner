{
  "name": "yc-github-runner",
  "version": "1.7.0",
  "description": "GitHub Action to On-demand self-hosted YC runner for GitHub Actions.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "GITHUB_REPOSITORY=owner/repo GITHUB_WORKSPACE=__tests__ jest --verbose",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "git-tag": "git tag v`cat package.json | jq -r '.version' | awk -F. '{print $1}'` -f &&  git tag v`cat package.json | jq -r '.version'` -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yc-actions/yc-github-runner.git"
  },
  "keywords": [
    "actions",
    "yandex cloud",
    "runner",
    "github action"
  ],
  "author": "Nikolay Matrosov",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@grpc/grpc-js": "1.12.6",
    "@yandex-cloud/nodejs-sdk": "^2.7.7",
    "js-yaml": "^4.1.0",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@stylistic/eslint-plugin-ts": "^3.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vercel/ncc": "^0.38.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.19.0",
    "eslint-import-resolver-typescript": "^3.8.1",
    "eslint-plugin-github": "^5.1.8",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  }
}
